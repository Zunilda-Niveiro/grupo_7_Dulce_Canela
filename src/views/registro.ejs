<%- include('./partials/head',{
    title: 'Registro'
}) %>

<body>
    <%- include('./partials/header') %>
    <main class="main__productos">
        <!-- BARRA BUSQUEDA -->
        <%- include('./partials/busqueda') %>
        <!-- TITULO -->
        <h1>Bienvenid@s al Registro</h1>
        <!-- REGISTRO -->
        <section class="main__login__section">
            <article class="main__login__form">
                <img class="form__logo" src="/images/logo.png" alt="">

                <form action="" class="form_style" method="POST" enctype="multipart/form-data">
                    <h3>Informacion Personal</h3>

                    <input class="<%= locals.errors && errors.nombre ? "input_error" : null %> " type="text"
                        name="nombre" value="<%= locals.old && old.nombre ? old.nombre : null %>" id="name"
                        placeholder="Ingrese su nombre">
                    <small class="error_msg"><%= locals.errors && errors.nombre ? errors.nombre.msg : null %> </small>
                    <small id="nombreError"></small>

                    <input class="<%= locals.errors && errors.apellido ? "input_error" : null %> " type="text" name="apellido" id="last_name" value="<%= locals.old && old.apellido ? old.apellido : null %>" placeholder="Ingrese su apellido" >
                    <small class="error_msg"><%= locals.errors && errors.apellido ? errors.apellido.msg : null %> </small>
                    <small id="apellidoError"></small>

                    <h4>Seleccione imagen de Perfil</h4>
                    <input type="file" name="imagenUser" id="imagen" accept="image/png, .jpeg, .jpg, image/gif">
                    <small id="imagenError"></small>

                    <h4>Informacion de Inicio de sesion</h4>
                    <input class="<%= locals.errors && errors.email ? "input_error" : null %> " type="email"
                        name="email" id="email" placeholder="Ingrese su email"
                        value="<%= locals.old && old.email ? old.email : null %>">
                    <small class="error_msg"><%= locals.errors && errors.email ? errors.email.msg : null %> </small>
                    <small id="emailError"></small>

                    <input class="<%= locals.errors && errors.contrasena ? "input_error" : null %> " type="password" name="contrasena" id="password" placeholder="Ingrese su contraseña" >
                    <small class="error_msg"><%= locals.errors && errors.contrasena ? errors.contrasena.msg : null %> </small>
                    <small id="contrasenaError"></small>

                    <input class="<%= locals.errors && errors.contrasena2 ? "input_error" : null %> " type="password" name="contrasena2" id="password2" placeholder="Ingrese nuevamente su contraseña" >
                    <small class="error_msg"><%= locals.errors && errors.contrasena2 ? errors.contrasena2.msg : null %> </small>
                    <small id="contrasenaError2"></small>
                

                    <button class="submit_btn" type="submit">Crear Cuenta</button>
                </form>
            </article>
        </section>
    </main>
    <%- include('./partials/footer') %> 
    <%- include('./partials/script') %> 
    <script src="/javascript/registroValidacion.js"></script>
    
</body>

</html>