            <li><a href="/productos/productos/1">Productos</a></li>
            <li><a href="http://localhost:3000" target="_blank">Panel de Administracion</a></li>
            <% } %>
            <% } else{ %>
            <li><a href="/productos/productos/1">Productos</a></li>
            <li><a href="/users/registro">Registro</a></li>
            <li><a href="/users/login/#login">Login</a></li>
            <% }%>


