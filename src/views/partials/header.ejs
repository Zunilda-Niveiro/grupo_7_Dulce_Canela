                <a href="/users/perfil"><img src="/images/usuarios/<%= userLogin.imagen ? userLogin.imagen : 'userDefault.png' %>" alt="" srcset="">
            </div>
            </div>
            <% } %>
    
        <div>
            <a href=""><span class="home__header--span"><i class="fa-solid fa-location-dot home__header--i"></i>Calle
